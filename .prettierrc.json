{
    "printWidth": 120,
    "singleQuote": true,
    "trailingComma": "none",
    "proseWrap": "always",
    "useTabs": false,
    "tabWidth": 2,
    "semi": true,
    "bracketSameLine": false,
    "overrides": [
        {
            "files": [
                "*.ts",
                "*.mts",
                "*.d.ts"
            ],
            "options": {
                "parser": "typescript"
            }
        },
        {
            "files": [
                "*.html"
            ],
            "options": {
                "parser": "html"
            }
        },
        {
            "files": [
                "*.component.html"
            ],
            "options": {
                "parser": "angular"
            }
        }
    ]
}